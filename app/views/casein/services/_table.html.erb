<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :Name %></th>
			<th><%= casein_sort_link "Description", :Description %></th>
			<th><%= casein_sort_link "Show service", :Show_Service %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% services.each do |service| %>
		<tr>
			<td><%= casein_table_cell_link service.Name, casein_service_path(service) %></td>
			<td><%= casein_table_cell_link service.Description, casein_service_path(service) %></td>
			<td><%= casein_table_cell_link service.Show_Service, casein_service_path(service) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_service_path(service), :method => :delete, :data => { :confirm => "Are you sure you want to delete this service?" }) %>
			</td>
		</tr>
	<% end %>
</table>